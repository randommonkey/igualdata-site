extends ../layouts/default

block vars
	- var showed = true

block main
	.spacer
	main.item-fill.container.column.v-centered
		article
			if !data.post
				h2 Esta entrada no existe
			else
				.post-header.line.justify-between.v-centered
					.post-header-title
						h1= data.post.title
						if data.post.publishedDate
							h5 #{data.post._.publishedDate.format('DD/MM')} 
					if data.post.image.exists
						img(src=data.post._.image.fit(750,450)).img-responsive
				.post-content
					!= data.post.content.full.html

block js
	script.
		function setSpacer () {
			const navHeight = document.querySelector('nav').offsetHeight
			document.querySelector('.spacer').style.height = `${navHeight}px`
		}

		setSpacer()

		window.addEventListener('resize', function () {
			setSpacer()
		})